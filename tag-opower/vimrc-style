"Indent options"
filetype indent on
set shiftwidth=4
set tabstop=4
set autoindent
set smartindent
set expandtab
set cindent

"Format options"
set formatoptions=tcqn1
colorscheme wells-colors
autocmd BufNewFile,BufReadPost *.md set filetype=markdown
let g:indentLine_color_term = 239
set guifont=Hack
